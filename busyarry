// Smooth scrolling for navigation links
document.querySelectorAll('nav a').forEach(anchor => {
    anchor.addEventListener('click', function(e) {
        e.preventDefault();
        document.querySelector(this.getAttribute('href')).scrollIntoView({
            behavior: 'smooth'
        });
    });
});

// Seat layout animation
document.addEventListener('DOMContentLoaded', () => {
    const seatContainer = document.querySelector('.seat-container');
    for (let i = 0; i < 30; i++) {
        const seat = document.createElement('div');
        seat.classList.add('seat');
        seat.innerText = i + 1;
        seat.addEventListener('click', () => {
            seat.classList.toggle('selected');
        });
        seatContainer.appendChild(seat);
    }
});

// Form validation (Example for login form)
document.querySelector('#getStarted').addEventListener('click', () => {
    alert('Redirecting to passenger details form...');
    // Simulate redirection to the passenger details form
    window.location.href = '#seatLayout';
});

